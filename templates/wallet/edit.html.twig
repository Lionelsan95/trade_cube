{% extends 'base.html.twig' %}

{% block title %}Edit Wallet{% endblock %}

{% block body %}
    <h1>Edit Wallet</h1>

    {{ include('wallet/_form.html.twig', {'button_label': 'Update'}) }}

    <a href="{{ path('wallet_index') }}">back to list</a>

    {{ include('wallet/_delete_form.html.twig') }}
{% endblock %}


{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready(function(){

            $("#wallet_user, #wallet_blockchain, #wallet_cryptomonnaie")
                .parent('div').css('display','none');

            $("#wallet>div").addClass('form-group');
            $("#wallet>div>input").addClass('form-control');
            $("#wallet>div>select").addClass('custom-select');

        });
    </script>
{% endblock %}